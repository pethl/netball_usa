<div id="<%= dom_id opportunity %>">

  <div class="relative overflow-x-auto">
    <table class="table-fixed w-full text-left rtl:text-right ">
      <thead class="bg-white border-blue-900 text-gray-300 font-light text-xs mb-2">
        <tr>
          <th>Type</th>
          <th>Area</th>
          <th>Status</th>
          <th>Allocated To</th>
          <th>Website</th>
          <th>Primary Contact</th>
                   <th>Pitch</th>
          <th>Follow Up Actions</th>
          <th>Outcome</th>
          <th>Notes</th>
          <th class="text-right">Actions</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="align-top"> <%= link_to opportunity.opportunity_type,[:edit, @sponsor, opportunity], class: link_class %></td>
          <td class="align-top"> <%= opportunity.area %></td>
          <td class="align-top"> <%= opportunity.status %></td>
          <td class="align-top"> <% if opportunity.user_id? %><%= User.find(opportunity.user_id).full_name %><% end %></td>
        
          <td class="align-top truncate"> <%= opportunity.website %></td>
          <td class="align-top truncate"> <% if opportunity.contact_id? %><%= Contact.find(opportunity.contact_id).full_name %><% end %></td>
          <td class="align-top truncate"> <%= opportunity.pitch %></td>
          <td class="align-top truncate"> <%= opportunity.follow_up_actions %></td>
          <td class="align-top truncate"> <%= opportunity.outcome %></td>
          <td class="align-top truncate"> <%= opportunity.notes %></td>
          <td class="align-top text-right"> <%= button_to "Delete",
          [@sponsor, opportunity],
          method: :delete,
          class: red_link_class %>
          <%= link_to "Edit",
            [:edit, @sponsor, opportunity],
            class: green_link_class %></td>
        </tr>
      </tbody>
    </table>
  <br>
  </div>
</div>
