<% content_for(:page_title, "People - Search")%>

<div class="">
   <ul class="flex flex-wrap text-xs font-medium text-left text-gray-500">
      <li class="me-2">
            <a href="/people/" class="inline-block p-4 pb-8 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">Umpires:<br>US & Canada</a>
        </li>
        <li class="me-2">
            <a href="/people/index_int" class="inline-block p-4 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">Umpires:<br>International</a>
        </li>
         <li class="me-2">
            <a href="/people/index_scorers/" class="inline-block p-4 pb-8 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">Scorers:</a>
        </li>
        <li class="me-2">
           <a href="/people/index_trainers_and_ambassadors/" class="inline-block p-4 pb-8 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">Trainers & <br>Ambassadors</a>
       </li>
       <li class="me-2">
         <a href="/people/people_search/" class="inline-block p-4 text-blue-900 bg-gray-100 rounded-t-lg active" aria-current="page">Search</a>
      </li>
      </ul>
</div>
<br>
<form class="max-w-md mx-auto">   
    <label for="search" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">Search</label>
    <div class="relative">
        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
            <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
            </svg>
        </div>
          <input name="search" type="search" id="search" class="block w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Search by first name or last name" />
        <button type="submit" class="text-white absolute end-2.5 bottom-2.5 bg-blue-900 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-light rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Search</button>
    </div>
</form>


<% if @people==0 %> 
  No records found. 
  <br>  <br>
  <div class="mt-2">
    <%= link_to "Add New Person", new_person_path, class: small_button_class %>
  </div class="pb-4">
  <br><br>
  
  <% else %>

<% unless @people.blank? %>

    <div id="persons">
    <div class="relative overflow-x-auto">
        <table class="table-fixed w-full text-left rtl:text-right shadow-md">
            <thead class="bg-white border-b text-gray-300 font-light text-xs ">
                 <tr>
                   <th scope="col" class="px-6 py-3 w-52">
                       See Details
                   </th>
                   <th scope="col" class="px-6 py-3 w-52">
                       Role 
                   </th>
                    <th scope="col" class="px-6 py-3 w-52">
                        Name 
                    </th>
                    <th scope="col" class="px-6 py-3 w-52">
                        Location
                    </th>
                    <th scope="col" class="px-6 py-3 w-52">
                        Level
                    </th>
                    <th scope="col" colspan="2" class="px-6 py-3 w-52">
                        Email
                    </th>
                    <th scope="col" class="px-6 py-3 w-52 text-center">
                        Headshot?
                    </th>
               
                    <th scope="col" class="px-6 py-3 w-40">
                        Associated?
                    </th>
                    <th scope="col" class="px-6 py-3 w-52">
                       Gender
                    </th>
                    <th scope="col" class="px-6 py-3 w-60 truncate">
                        Notes
                    </th>
                </tr>
            </thead>
            <tbody>
            <% if @people.count >0 %>
             <% @people.each do |person| %>
                <tr class="bg-white border-b hover:bg-gray-100">
                    <td class="px-6 py-4">
                      <%= link_to image_tag("view.png", :class=>"mx-2 h-6 w-auto"), person  %>
                 
                      </td>
                      <td class="px-6 py-4">
                         <%= person.role %>
                      </td>
                  
                    <td class="px-6 py-4">
                       <%= link_to person.full_name, edit_person_path(person), class: link_class %>
                    </td>
               
                    <td class="px-6 py-4">
                       <%= person.location %>
                    </td>
                
                    <td class="px-6 py-4">
                      <%= person.level %><br>
                     </td>
                
                    <td colspan="2" class="px-6 py-4">
                      <%= person.email %><br>
                       <%= person.phone %>
                    </td>
                
                    <td class="px-6 py-4 text-center">
                       <%= person.headshot_present? ? 'Yes' : 'No'  %>
                    </td>
                
                    <td class="px-6 py-4">
                       <%= person.associated  %>
                    </td>
                
                    <td class="px-6 py-4">
                       <%= person.gender  %>
                    </td>

                     <td class="px-6 py-4">
                      <p class="text-wrap truncate"> <%= person.notes %></p>
                    </td>
                </tr>
                <% end %>
                 <% end %>
            </tbody>
        </table>
     </div>
    </div>
<% end %>
<% end %>





    
   


