<% content_for(:page_title, "People - International Umpires")%>

<div class="">
   <ul class="flex flex-wrap text-xs font-medium text-left text-gray-500">
      <li class="me-2">
          <a href="/people/" class="inline-block p-4 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">Umpires:<br>US & Canada</a>
        </li>
        <li class="me-2">
           <a href="/people/index_int" class="inline-block p-4 text-blue-900 bg-gray-100 rounded-t-lg active" aria-current="page">Umpires:<br>International</a>
        </li>
         <li class="me-2">
            <a href="/people/index_scorers/" class="inline-block p-4 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">Scorers:<br></a>
        </li>
        <li class="me-2">
           <a href="/people/index_trainers_and_ambassadors/" class="inline-block p-4 pb-8 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">Trainers & <br>Ambassadors</a>
       </li>
       <li class="me-2">
           <a href="/people/index_coaches/" class="inline-block p-4 pb-8 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">Coaches</a>
       </li>
       <li class="me-2">
           <a href="/people/index_operations/" class="inline-block p-4 pb-8 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">Operations</a>
       </li>
       <li class="me-2">
          <a href="/people/people_search/" class="inline-block p-4 pb-8 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">Search</a>
      </li>
      </ul>
</div>

<div class="mt-2 mb-2">
<%= link_to "Add New Person", new_person_path, class: form_button_class %>
</div>

<div id="people">
<div class="relative overflow-x-auto">
    <table class="table-fixed w-full text-left rtl:text-right">
        <thead class="bg-white border-b text-gray-300 font-light text-xs ">
             <tr>
               <th scope="col" class="px-6 py-3 w-52">
                   Details
               </th>
                <th scope="col" class="px-6 py-3 w-52">
                    Name 
                </th>
                <th scope="col" class="px-6 py-3 w-52">
                    Location
                </th>
                <th scope="col" class="px-6 py-3 w-52">
                    Level
                </th>
                <th scope="col" colspan="2" class="px-6 py-3 w-52">
                    Email & Phone
                </th>
              
                <th scope="col" class="px-6 py-3 w-52 text-center">
                    Adress
                </th>
                <th scope="col" class="px-6 py-3 w-40">
                    Associated?
                </th>
                <th scope="col" class="px-6 py-3 w-52">
                   Gender
                </th>
                <th scope="col" class="px-6 py-3 w-60 truncate">
                    Notes
                </th>
            </tr>
        </thead>
        <tbody>
         <% if @people.count >0 %>
         <% @people.each do |person| %>
            <tr class="bg-white border-b hover:bg-gray-100 whitespace-nowrap">
                <td class="px-6 py-4">
                  <%= link_to image_tag("view.png", :class=>"mx-2 h-6 w-auto"), person  %>
                  </td>
             
                <td class="px-6 py-4">
                <% if person.invite_back == "Yes" %>
                 <i class="fa-solid fa-square text-green-500"></i>
                  <% elsif person.invite_back == "" %>
                 <i class="fa-regular fa-square text-gray-800"></i>
                    <% elsif person.invite_back == "No" %>
                     <i class="fa-solid fa-square text-red-600"></i>
                      <% elsif person.invite_back == "Conditional" %>
                       <i class="fa-solid fa-square text-yellow-300"></i>
                        <% elsif person.invite_back.to_s.empty? %>
                          <i class="fa-regular fa-square text-gray-800"></i>
                          <% end %>
                
                
                   <%= link_to person.full_name, edit_person_path(person), class: link_class %>
                </td>
               
                <td class="px-6 py-4">
                   <%= person.location %>
                </td>
                
                <td class="px-6 py-4">
                  <%= person.level %><br>
                 </td>
                
                <td colspan="2" class="px-6 py-4 truncate">
                   <%= person.email %><br>
                    <%= person.phone %>
                </td>
                
                <td class="px-6 py-4 text-center">
                   <%= person.address %>
                </td>
                
                <td class="px-6 py-4">
                   <%= person.associated  %>
                </td>
                
                <td class="px-6 py-4">
                   <%= person.gender  %>
                </td>

                 <td class="px-6 py-4">
                  <p class="text-wrap truncate"> <%= person.notes %></p>
                </td>
            </tr>
            <% end %>
              <% else %>
              No Records
              <% end %>
        </tbody>
    </table>
</div>
 </div>
 <br>
<div class="mt-1 ">
Color coding is based on the 'Invite Back' Field.<br> 
YES=<i class="fa-solid fa-square text-green-500"></i> : Conditional=<i class="fa-solid fa-square text-yellow-300"></i> : NO=<i class="fa-solid fa-square text-red-600"></i> : Unrated=<i class="fa-regular fa-square text-grey-800"></i>
</div>
