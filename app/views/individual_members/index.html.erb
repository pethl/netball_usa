<% content_for(:page_title, "Individual Members (Not linked to a Team)") %>

<div class="my-4">
    <%= link_to "Add Individual Member", new_individual_member_path, class: form_button_class %>
</div>
<% if @individual_members.any? %>

<div class="relative overflow-x-auto">
    <table class="w-full text-left rtl:text-right">
        <thead class="bg-gray-200 border-b text-gray-600 font-light text-xs ">
            <tr>
                <th scope="col" class="px-6 py-2">
                    Membership Type
                </th>
                <th scope="col" class="px-6 py-2">
                    Team
                </th>
                <th scope="col" class="px-6 py-2">
                    Full Name
                </th>
                <th scope="col" class="px-6 py-2">
                    Email
                </th>
                <th scope="col" class="px-6 py-2 text-right">
                    Payments
                </th>
                 <th scope="col" class="px-6 py-2">
                    City
                </th>
                <th scope="col" class="px-6 py-2">
                    State
                </th>
                <th scope="col" class="px-6 py-2">
                    Gender
                </th>
                <th scope="col" class="px-6 py-2">
                    Age Status
                </th>
                <th scope="col" class="px-6 py-2">
                    Engagement
                </th>
                <th scope="col" class="px-6 py-2">
                    Coaching Interest?
                </th>
                <th scope="col" class="px-6 py-2">
                    Umpiring Interest?
                </th>
                <th scope="col" class="px-6 py-2">
                    Team USA Interest?
                </th>
               </tr>
        </thead>
        <tbody>
        <% @individual_members.each do |individual_member| %>
            <tr class="bg-white border-b hover:bg-gray-100 whitespace-nowrap">
                <td class="px-6 py-4">
                    <%= individual_member.membership_type %>
                </td>
                <td class="px-6 py-4">
                    <%= individual_member.club.name unless individual_member.club_id.to_s.empty? %>
                 </td>
                <td class="px-6 py-4">
                    <%= (link_to individual_member.full_name, edit_individual_member_path(individual_member), class: link_class)  %>
                </td>
                <td class="px-6 py-4">
                    <%= individual_member.email %>
                </td>
               
                <td class="px-6 py-4 text-right">
                <% if individual_member.has_paid == "Discounted Member" %>
                  <span class="text-green-500">Discounted member</span>
                <% elsif individual_member.has_paid == "Payment Due" %>
                  <span class="text-red-500">Payment Due</span>
                <% else %>
                 <span class="text-green-500">Paid $<%= individual_member.has_paid %></span>
                  
                <% end %>
            </td>
                <td class="px-6 py-4">
                    <%= individual_member.city %>
                </td>
                <td class="px-6 py-4">
                   <%= individual_member.state %>
                </td>
                 <td class="px-6 py-4">
                    <%= individual_member.gender %>
                </td>
                <td class="px-6 py-4">
                    <%= individual_member.age_status %>
                </td>
                <td class="px-6 py-4">
                    <%= individual_member.engagement_status %>
                </td>
                <td class="px-6 py-4">
                    <%= individual_member.interested_in_coaching? ? 'Yes' : 'No'  %>
                </td>
                <td class="px-6 py-4">
                    <%= individual_member.interested_in_umpiring? ? 'Yes' : 'No'  %>
                </td>
                <td class="px-6 py-4">
                    <%= individual_member.interested_in_usa_team? ? 'Yes' : 'No'  %>
                </td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
 </div>
<% else %>
<p class="px-6 py-4">
No records to view</p>
<% end %>
<br>
