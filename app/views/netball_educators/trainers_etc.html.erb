<%# /netball_educators/trainers_etc.html.erb %>

<% content_for(:page_title, "Trainers & Ambassadors") %>

<div class="text-blue-900 text-xs font-light text-center">
    NOTE: Only NA People of Role:Trainer or Ambassadorare shown here.
    </div>
<div class="py-2">
  
  <%= render 'nav_tabs' %>
</div>

<div class="my-2">
  <%= link_to "Add New Person", new_person_path, class: form_button_class %>
</div>


<div class="mx-2">

   <%# --- ACTIVE TRAINERS grouped by educator_role --- %>
    <% @active_trainers.group_by { |p| p.educator_role.presence || "Other" }.each do |role, people| %>
      <h2 class="text-2xl font-semibold mt-4 mb-4"><%= role %></h2>

      <%= render 'people/people_table', people: people, searching: false, search_term: nil %>
    <% end %>

    <%# --- INACTIVE TRAINERS grouped together --- %>
    <% if @inactive_trainers.any? %>
      <h2 class="text-2xl font-semibold mt-12 mb-4 text-gray-600">Inactive Trainers</h2>

      <%= render 'people/people_table', people: @inactive_trainers, searching: false, search_term: nil %>
    <% end %>
</div>


