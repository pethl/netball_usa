<% content_for(:page_title, "Educators: Search")%>

  <div class="">
     <ul class="flex flex-wrap text-xs font-medium text-left text-gray-500">
        <li class="me-2">
              <a href="/netball_educators/" class="inline-block p-2 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">By Created Date</a>
          </li>
          <li class="me-2">
              <a href="/netball_educators/index_state" class="inline-block p-2 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">By State</a>
          </li>
           <li class="me-2">
              <a href="/netball_educators/index_user" class="inline-block p-2 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">By Allocation</a>
          </li>
          <li class="me-2">
             <a href="/netball_educators/index_level" class="inline-block p-2 rounded-t-lg hover:text-gray-600 hover:bg-gray-50">By Level</a>
         </li>
         <li class="me-2">
               <a href="/netball_educators/search" class="inline-block p-2 text-blue-900 bg-gray-100 rounded-t-lg active" aria-current="page">Search</a>
           </li>
        </ul>
  </div>
<br>
  <form class="max-w-md mx-auto">   
      <label for="default-search" class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white">Search</label>
      <div class="relative">
          <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
              <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
              </svg>
          </div>
            <input name="search" type="search" id="default-search" class="block w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Search by first name or last name" required />
          <button type="submit" class="text-white absolute end-2.5 bottom-2.5 bg-blue-900 hover:bg-blue-700 focus:ring-4 focus:outline-none focus:ring-blue-300 font-light rounded-lg text-sm px-4 py-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Search</button>
      </div>
  </form>

    <% if @netball_educators==0 %> No records found. <% else %>
    <% if @netball_educators.any? %>
  
    <div id="educators">
    <div class="relative overflow-x-auto">
        <table class="table-fixed w-full text-left rtl:text-right">
            <thead class="bg-white border-b text-gray-300 font-light text-xs ">
                 <tr>
                    <th scope="col" class="px-6 py-3 w-52">
                        Date Created 
                    </th>
                    <th scope="col" class="px-6 py-3 w-52">
                        Name
                    </th>
                    <th scope="col" class="px-6 py-3 w-52">
                        Contact
                    </th>
                    <th scope="col" class="px-6 py-3 w-52 truncate">
                        School/District
                    </th>
                    <th scope="col" class="px-6 py-3 w-52">
                        Level
                    </th>
                    <th scope="col" class="px-6 py-3 w-52">
                        City
                    </th>
                    <th scope="col" class="px-6 py-3 w-40">
                        State
                    </th>
                    <th scope="col" class="px-6 py-3 w-52">
                        Allocated To
                    </th>
                    <th scope="col" class="px-6 py-3 w-60 truncate">
                        Notes
                    </th>
                </tr>
            </thead>
            <tbody>
            <% @netball_educators.each do |educator| %>
                <tr class="bg-white border-b hover:bg-gray-100">
                    <th scope="row" class="px-6 py-4 font-medium text-gray-800 whitespace-nowrap dark:text-white">
                        <%= educator.created_at.to_formatted_s(:usa) unless (educator.created_at.to_s.empty?) %>
                    </th>
                
                    <td class="px-6 py-4">
                       <%= link_to educator.full_name, edit_netball_educator_path(educator), class: link_class %>
                    </td>
                
                    <td class="px-6 py-4">
                       <%= educator.formatted_phone %><br><%= educator.email %>
                    </td>
                
                    <td class="px-6 py-4">
                      <%= educator.school_name %><br>
                      <%= (link_to educator.website, educator.website, target: '_blank', class: link_class) unless (educator.website.to_s.empty?)%>
                  
                    </td>
                    <td class="px-6 py-4">
                       <%= educator.level %>
                    </td>
                
                     <td class="px-6 py-4">
                        <%= educator.city %>
                    </td>
                
                    <td class="px-6 py-4">
                       <%= educator.state %>
                    </td>
                
                    <td class="px-6 py-4">
                       <%= educator.user.full_name unless (educator.user_id.to_s.empty?)  %>
                    </td>

                     <td class="px-6 py-4">
                      <p class="text-wrap truncate"> <%= educator.mgmt_notes %></p>
                    </td>
                </tr>
                <% end %>
            </tbody>
        </table>
   
        <% end %>
         <% end %>
         
  </div>
</div>      

