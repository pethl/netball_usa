<% if user_signed_in? %>
 <% content_for :page_title, page_title_for(@netball_educator) %>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
  <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
<% end %>

 <% unless user_signed_in? %>
   <br>
   <p class="text-center text-xl text-blue-900">Educator's Request for<br> More Information</p><br>
  <% end %>

<%= render @netball_educator %>

<br>
<% if user_signed_in? %>
  <div class="space-y-2">

    <!-- Navigation links -->
    <%= link_to "<< All Educators",
      netball_educators_path,
      class: block_link_class %>

    <%= link_to "<< All Kidokinetics",
      kidos_netball_educators_path,
      class: block_link_class %>

    <%= link_to "<< All Talentlockr",
      talentlockr_netball_educators_path,
      class: block_link_class %>

    <%= link_to "<< All PE Directors",
      pe_directors_netball_educators_path,
      class: block_link_class %>

    <hr class="my-2">

    <!-- General actions (all signed-in users) -->
    <div class="my-2">
      <%= button_to "Edit this record",
        edit_netball_educator_path(@netball_educator),
        method: :get,
        class: form_button_class %>
    </div>

    <!-- Admin-only actions -->
    <% if current_user.admin? %>
      <div class="my-2">
        <%= button_to "MGMT ADMIN ONLY: Delete this record",
          @netball_educator,
          method: :delete,
          form: { data: { turbo_confirm: "Are you sure?" } },
          class: red_link_class %>
      </div>
    <% end %>

   <hr class="my-2">
<br>
    <div class="mt-4 text-left">
      <%= link_to "Add New Educator",
        new_netball_educator_path,
        class: form_button_class %>
    </div>

  </div>
<% end %>


