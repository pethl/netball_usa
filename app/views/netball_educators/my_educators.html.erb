<% content_for(:page_title, "My Educators (allocated to me)") %>

<%= render 'nav_tabs' %>

<div class="p-4 flex justify-between items-center">
  <div class="flex gap-2">
    <% if current_user.admin? %>
      <%= link_to "To Excel >",
        my_educators_netball_educators_path(format: "xlsx"),
        class: clear_button_class %>
    <% end %>

    <%= link_to "Add New",
      new_netball_educator_path,
      class: form_button_class %>
  </div>
</div>


<div class="p-4">
  <% if @netball_educators.any? %>
    <div id="educators">
      <%= render 'educators_table', educators: @netball_educators %>
    </div>
  <% else %>
    <p class="px-4 py-2">No records to view</p>
  <% end %>
</div>
