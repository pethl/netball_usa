<% content_for(:page_title, "System Users")%>

<div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10 text-sm">
 

<div id="users">
 
<table class="table-auto border border-slate-400 h_scrolling_list_table">
  <thead>
    <tr>
      <th class="font-bold p-2 border-b text-left bg-blue-900 text-white">First Name</th>
      <th class="font-bold p-2 border-b text-left bg-blue-900 text-white">Last Name</th>
      <th class="font-bold p-2 border-b text-left bg-blue-900 text-white">Email</th>    
      <th class="font-bold p-2 border-b text-left bg-blue-900 text-white">Account Created</th>    
      <th class="font-bold p-2 border-b text-left bg-blue-900 text-white">Last Sign In</th> 
      <th class="font-bold p-2 border-b text-left bg-blue-900 text-white" >Is_admin?</th>   
    </tr>
  </thead>
  
  <tbody>
  <% @users.each do |user| %>
     <tr class="odd:bg-gray-100">
     <td class="p-2 border-b text-left"><%= user.first_name %></td>
      <td class="p-2 border-b text-left"><%= user.last_name %></td>
      <td class="p-2 border-b text-left"><%= user.email %></td>
       <td class="p-2 border-b text-left"><%= user.created_at.to_formatted_s(:default) %></td>
       <td class="p-2 border-b text-left"><%= user.last_sign_in_at.to_formatted_s(:default) unless (user.last_sign_in_at.to_s.empty?)%></td>
       <td class="p-2 border-b text-left"><%= user.admin %></td>
      
        </tr>
  <% end %>
 </tbody>
</table>
</div>

</div></div>
