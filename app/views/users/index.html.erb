<% content_for(:page_title, "System Users")%>

<div id="users">
 
<table class="table-auto border border-slate-400 ...">
  <thead>
    <tr>
      <th class="font-bold p-2 border-b text-left bg-indigo-700 text-white">First Name</th>
      <th class="font-bold p-2 border-b text-left bg-indigo-700 text-white">Last Name</th>
      <th class="font-bold p-2 border-b text-left bg-indigo-700 text-white">Email</th>    
      <th class="font-bold p-2 border-b text-left bg-indigo-700 text-white">Account Created</th>    
       <th class="font-bold p-2 border-b text-left bg-indigo-700 text-white">Last Sign In</th>    
    </tr>
  </thead>
  
  <tbody>
  <% @users.each do |user| %>
     <tr class="odd:bg-gray-100">
     <td class="p-2 border-b text-left"><%= user.first_name %></td>
      <td class="p-2 border-b text-left"><%= user.last_name %></td>
      <td class="p-2 border-b text-left"><%= user.email %></td>
       <td class="p-2 border-b text-left"><%= user.created_at.to_formatted_s(:default) %></td>
       <td class="p-2 border-b text-left"><%= user.last_sign_in_at %></td>
        </tr>
  <% end %>
 </tbody>
</table>
</div>
