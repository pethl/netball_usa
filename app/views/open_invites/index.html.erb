<% content_for(:page_title, "US Open Invites")%>

<div class="my-4">
  <%= link_to "Add Record", new_open_invite_path, class:form_button_class %>
</div>

<div class="grid grid-cols-12 text-sm bg-gray-200 border-b border-gray-400 px-2 py-2 text-sm text-center">
  <div class="flex justify-right ml-2">Person</div>  
  <div class="flex justify-right ml-2">Status</div>
  <div class="flex justify-center">Invite Sent</div>
  <div class="flex justify-center">Invite Sent<br>Date</div>
  <div class="flex justify-center">RSPV</div>
  <div class="flex justify-center">Whova</div>
  <div class="flex justify-center">Flight<br>Booked</div>
  <div class="flex justify-center">Save The<br>Date</div>
  <div class="flex justify-center">Response</div>
  <div class="flex justify-center">Official<br>Invite</div>
  <div class="flex justify-right">Comments</div>
  <div class="flex justify-center">Actions</div>
</div>

<% @open_invites.each do |invite| %>
  <%= turbo_frame_tag dom_id(invite), class: "#{'bg-blue-100' if flash[:highlight_id] == invite.id}" do %>
    <%= render partial: "open_invite_row", locals: { open_invite: invite } %>
  <% end %>
<% end %>
