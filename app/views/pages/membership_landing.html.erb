<% if @needs_renewal %>
  <!-- Renewal needed: show banner -->
  <%= render "pages/renewal_banner" %>

<% else %>
  <% if @renewal_response == "no" %>
    <!-- User said no: show 'no renewal' landing -->
    <% if @member_type == "Club" %>
      <%= render "pages/landing_teams_no_renewal", club: @club %>
    <% elsif @member_type == "Individual" %>
      <%= render "pages/landing_individual_no_renewal", individual: @individual_member %>
    <% end %>

  <% else %>
    <!-- Normal landing -->
    <% if @member_type == "None" %>
      <%= render "pages/landing_new", disable_buttons: false %>
    <% elsif @member_type == "Club" %>
      <%= render "pages/landing_teams", disable_buttons: false, club: @club %>
    <% elsif @member_type == "Individual" %>
      <%= render "pages/landing_individual", disable_buttons: false, individual: @individual_member %>
    <% end %>
  <% end %>
<% end %>




