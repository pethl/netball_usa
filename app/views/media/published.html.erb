<% content_for(:page_title, "Media: Published") %>

<div class="min-h-screen bg-white">
  <div class="max-w-5xl mx-auto p-6 border ">
    <% if @published_media.any? %>
      <table class="min-w-full table-auto divide-y divide-gray-200">
        <thead class="bg-gray-300 text-gray-800">
          <tr>
            <th class="px-4 py-2 text-left text-sm font-semibold">Company</th>
            <th class="px-4 py-2 text-left text-sm font-semibold">Release Date</th>
            <th class="px-4 py-2 text-left text-sm font-semibold">Link</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @published_media.each do |media| %>
            <tr class="hover:bg-gray-50">
              <td class="px-4 py-2 text-sm text-gray-800"><%= media.company_name %></td>
              <td class="px-4 py-2 text-sm text-gray-600"><%= media.release_date.strftime("%B %d, %Y") %></td>
              <td class="px-4 py-2">
                <%= link_to "View", media.media_announcement_link, target: "_blank", rel: "noopener", class: "text-blue-700 hover:underline text-sm" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% else %>
      <p class="text-gray-600 italic">No published media links yet.</p>
    <% end %>
  </div>
</div>
