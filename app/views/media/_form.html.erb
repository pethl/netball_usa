
<%= form_with(model: medium) do |form| %>
  <% if medium.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(medium.errors.count, "error") %> prohibited this medium from being saved:</h2>

      <ul>
        <% medium.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-3 gap-4 mt-8 mx-8">
  
    <div>
      <%= form.label :media_type, class: label_class %>
      <%= form.select :media_type, options_for_select(media_type, :selected => medium.media_type),{:prompt=>true}, class: tight_form_input_class %>
    </div>

    <div>
      <%= form.label :company_name, class: label_class %>
      <%= form.text_field :company_name, class: tight_form_input_class %>
    </div>

     <!-- This is a spacer pair of divs, don't delete -->
    <div class="my-spacer"></div>

    <div>
      <%= form.label :contact_name,  class: label_class %>
      <%= form.text_field :contact_name, class: tight_form_input_class  %>
    </div>

    <div>
      <%= form.label :contact_position,  class: label_class %>
      <%= form.text_field :contact_position, class: tight_form_input_class  %>
    </div>

     <!-- This is a spacer pair of divs, don't delete -->
    <div class="my-spacer"></div>

    <div>
      <%= form.label :email,  class: label_class %>
      <%= form.text_field :email, class: tight_form_input_class  %>
    </div>

    <div>
      <%= form.label :phone,  class: label_class %>
      <%= form.text_field :phone, class: tight_form_input_class  %>
    </div>

    <div>
      <%= form.label :country,  class: label_class %>
      <%= form.text_field :country, class: tight_form_input_class  %>
    </div>


    <div>
      <%= form.label :city,  class: label_class %>
      <%= form.text_field :city, class: tight_form_input_class %>
    </div>

    <div>
      <%= form.label :state,  class: label_class %>
      <%= form.select :state, options_for_select(us_states, medium.state), { prompt: "Select a state" }, class: tight_form_input_class %>
    </div>

    <div>
      <%= form.label :region_other,  "Region if NOT USA State", class: label_class %>
      <%= form.text_field :region_other, class: tight_form_input_class  %>
    </div>

    <div class="col-span-3">
      <%= form.label :pitch,  class: label_class %>
      <%= form.text_area :pitch, class: tight_form_input_class  %>
    </div>

    <div class="col-span-2">
      <%= form.label :media_announcement_link,  class: label_class %>
      <%= form.text_field :media_announcement_link, class: tight_form_input_class  %>
    </div>

     <div class="col-span-3">
      <%= form.label :action_taken,  class: label_class %>
      <%= form.text_area :action_taken, class: tight_form_input_class  %>
    </div>

    <div class=mt-3>
      <%= form.submit "Save Media", class: form_button_class %>
    </div>
<% end %>

</div>
