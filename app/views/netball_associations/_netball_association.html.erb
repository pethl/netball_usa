<div id="<%= dom_id(netball_association) %>">

  <%= turbo_frame_tag "netball_association_#{netball_association.id}" do %>
    <div class="p-3 mb-2 mt-2 border border-blue-900 rounded-lg shadow-md shadow-blue-900 hover:shadow-2xl">
      
      <div class="flex justify-between">
        <div class="mb-2 bg-blue-100">
          <span class="whitespace-nowrap text-2xl"><%= netball_association.name %></span>
          <span class="font-light text-base">
          â€“ <%= netball_association.city %>, <%= netball_association.state %>
          <% if netball_association.country.present? %>
            , <%= netball_association.country %>
          <% end %>
        </span>
        </div>

        <div class="text-right">
        <%= link_to "Edit Assocation",
            edit_netball_association_path(netball_association),
            data: { turbo: false },
            class: "font-semibold text-teal-600 border border-teal-600 p-1 rounded-lg hover:bg-teal-100" %> </div>
      </div>

      <div class="flex flex-wrap gap-4 mt-2 text-sm text-gray-700">
        <% if netball_association.website.present? %>
          <div>
            <i class="fa-solid fa-globe"></i>
            <%= link_to netball_association.website, netball_association.website, class: link_class, target: "_blank" %>
          </div>
        <% end %>

        <% if netball_association.email.present? %>
          <div>
            <i class="fa-solid fa-envelope"></i>
            <%= mail_to netball_association.email, nil, class: link_class %>
          </div>
        <% end %>

        <% if netball_association.facebook.present? %>
          <div>
            <i class="fa-brands fa-facebook"></i>
            <%= link_to netball_association.facebook, "https://facebook.com/#{netball_association.facebook}", class: link_class, target: "_blank" %>
          </div>
        <% end %>

        <% if netball_association.instagram.present? %>
          <div>
            <i class="fa-brands fa-instagram"></i>
            <%= link_to netball_association.instagram, "https://instagram.com/#{netball_association.instagram}", class: link_class, target: "_blank" %>
          </div>
        <% end %>

        <% if netball_association.twitter.present? %>
          <div>
            <i class="fa-brands fa-x-twitter"></i>
            <%= netball_association.twitter %>
          </div>
        <% end %>
      </div>

       <% if netball_association.number_of_clubs.present? %>
      <div class="mt-4 text-xl text-blue-800 font-semibold">
        Clubs in this Association: <%= netball_association.number_of_clubs %>
      </div>
    <% end %>


      <% if netball_association.notes.present? %>
        <div class="mt-4 text-gray-600">
          <h3 class="font-semibold text-sm mb-1">Notes</h3>
          <p><%= simple_format(netball_association.notes) %></p>
        </div>
      <% end %>

    </div>
  <% end %>

</div>
