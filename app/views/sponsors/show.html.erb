<% content_for(:page_title, "Sponsor Target: #{@sponsor.company_name}")%>

<div class="m-2">

 <div class="flex flex-row">
    <div class="basis-1/2  max-w-1/2">
        <div class="ml-2 text-lg font-bold text-gray-800 mb-2">
          Sponsor Details
        </div>
          <%= render @sponsor %>
    </div>
    
    <div class="basis-1/2 max-w-1/2">
      <div class="flex flex-row justify-between">
        <div class="text-lg font-bold text-gray-800 ml-6">
          Contacts
        </div>
        <div class="">
          <%= link_to "New Contact",
            new_sponsor_contact_path(@sponsor),
            class: form_button_class %>
        </div>
      </div>
        
      <div class="container">
        <div class="ml-2 p-2 overflow-auto utility">
          <% if @sponsor.contacts.any? %>
          <%= render @contacts, sponsor: @sponsor %>
          <% end %>
        </div>
      </div>
    </div>
    </div>
  
 <br>

  <div class="flex flex-row justify-between items-center">
    <div class="ml-2 text-lg font-bold text-gray-800">Opportunities</div>
      <div class="mr-2">
          <%= link_to "New Opportunity",
            new_sponsor_opportunity_path(@sponsor),
            class: form_button_class %>
      </div>
    </div>
    
    <div class="border border-blue-900 rounded m-2 mr-4 pr-4 min-h-20">
      <% if @sponsor.opportunities.any? %>
          <div class="p-2">
          <%= render @opportunities, sponsor: @sponsor %>
          </div>
      <% end %>
    </div>


    <div class="p-4">
      <%= link_to "Edit this sponsor", edit_sponsor_path(@sponsor), class: form_button_class %> <br>
     </div>
      <%= link_to "<< Back to sponsors", sponsors_path, class: link_class %>
      <br>
      <% if current_user.admin? %>
        <%= link_to "Delete this sponsor", @sponsor, method: :delete, class:link_class  %>
      <% end %>
    </div>

  </div>
</div>
