<div id="<%= dom_id contact %>">

<div class="block rounded-lg border border-blue-900 bg-white p-4 mb-2 shadow-md">
  <div class="flex flex-row justify-between mb-2">
    <div class="basis-3/4 text-lg font-medium leading-tight text-gray-600"> <%= contact.full_name %>  <% if contact.nickname? %><span class="text-md">(<%= contact.nickname %>)<% end %></div>
    <div class="basis-1/4 text-sm font-light justify-between text-right flex flex-row">
        <div class="flex ml-6">
          <%= button_to "Delete",
          sponsor_contact_path(@sponsor, contact),
          method: :delete,
          form: { data: { turbo_confirm: "Are you sure?" } },
          class: red_link_class %>
        </div>
        <div class="flex mr-6">
            <%= link_to "Edit",
              [:edit, @sponsor, contact],
              class: green_link_class %>
        </div>
       </div>
  </div>
  <div class="mb-2">
    <span class="text-gray-500"><%= contact.job_title %> </span>
        <% if contact.department? %>
        <span class="text-gray-700"> - <%= contact.department %> - </span><% end %>
        <% if contact.organisation? %>
        <span class="text-gray-900"> - <%= contact.organisation %>  </span><% end %>
        <% if contact.location? %>
        <span class="text-gray-900"> - <%= contact.location %> </span><% end %>
  </div>
  <div class="flex justify-between">
    <div class="whitespace-nowrap ml-2 mr-2 text-md font-medium text-gray-500"><i class="fa-regular fa-envelope"> </i> <%= contact.email %></div>
    <div class="whitespace-nowrap text-left ml-2 mr-2 text-md font-medium text-gray-500"><i class="fa-brands fa-linkedin"> </i> <%= contact.linked_in %></div>
  </div>    
  <div class="flex justify-between">
    <div class="whitespace-nowrap ml-2 mr-2 text-md font-medium text-gray-500"><i class="fa-regular fa-mobile-retro"> </i> <%= contact.mobile %></div>
    <div class="whitespace-nowrap text-left ml-2 mr-2 text-md font-medium text-gray-500"><i class="fa-regular fa-phone"> </i> <%= contact.phone %></div>
  </div>
  </div> 
  <% if contact.notes? %>
    <div class="p-1 text-sm italic text-blue-900 text-light"><%= contact.notes %></div> 
    <% end %>
</div>

</div>
