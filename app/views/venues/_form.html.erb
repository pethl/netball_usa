    <%= form.label :cost_per_hour, class: label_class %>
      <div class="mt-1">
      <%= form.number_field :cost_per_hour, step: 0.01, placeholder: "$ 0.00",  class: number_input_class %>
      </div>
  </div>
   
  <div class="mb-2">
  <%= form.label :cost_per_day, class: label_class %>
    <div class="mt-1">
    <%= form.number_field :cost_per_day, step: 0.01, placeholder: "$ 0.00",  class: number_input_class %>
    </div>
  </div>

  <div class="mb-2">
    <%= form.label :cost_per_night, class: label_class %>
      <div class="mt-1">
      <%= form.number_field :cost_per_night, step: 0.01, placeholder: "$ 0.00",  class: number_input_class %>
