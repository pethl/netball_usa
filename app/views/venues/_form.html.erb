  </div>

  <div>
  </div>

  <div class="mb-2 md:col-span-3">
  <%= form.label :notes, class: label_class%>
   <div class="mt-1">
    <%= form.text_area :notes, class: form_input_class,  size: "20x3"  %>
   </div> 
 </div>
 </div>

  <div>
    <%= form.submit class: form_button_class %>
  </div>
<% end %>
