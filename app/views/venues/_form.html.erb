  <div class="mb-2">
    <%= form.label :locker_rooms_onsite, class: label_class %>
      <div class="mt-1">
        <%= form.select :locker_rooms_onsite, options_for_select(generic_option, :selected => venue.locker_rooms_onsite),{:prompt=>true}, class: form_input_class %>  
      </div> 
  </div>

  <div class="mb-2">
    <%= form.label :pool, class: label_class %>
      <div class="mt-1">
      <%= form.select :pool, options_for_select(generic_option, :selected => venue.pool),{:prompt=>true}, class: form_input_class %>  
      </div> 
  </div>

  <div class="mb-2">
    <%= form.label :hot_tub, class: label_class %>
      <div class="mt-1">
      <%= form.select :hot_tub, options_for_select(generic_option, :selected => venue.hot_tub),{:prompt=>true}, class: form_input_class %>  
      </div> 
  </div>

  <div class="mb-2">
    <%= form.label :bed_types, class: label_class%>
    <div class="mt-1">
      <%= form.text_area :bed_types, class: form_input_class,  size: "20x2"  %>
    </div> 
  </div>

  <div>
  </div>

