<div id="<%= dom_id payment %>">

<div class="w-2/3 m-4 mt-4">
  <div class="border border-blue-900 rounded">
  <div class="m-4">
  
    <div class="flex flex-wrap gap-2">
        <div class="my-2 mx-6">
          <p class="text-sm text-gray-500 ">
              Payment Type:
          </p>
          <p class="text-lg font-medium text-gray-800">
            <%= payment.payment_type %>
          </p>
      </div>

      <div class="my-2 mx-6">
        <p class="text-sm text-gray-500 ">
            Amount:
        </p>
        <p class="text-lg font-medium text-gray-900">
         <% unless payment.amount.nil? %>
          <%= number_to_currency(payment.amount, precision: 0) %>
         <% end %>
        </p>
     </div>

      <div class="my-2 mx-6">
          <p class="text-sm text-gray-500 ">
              Payment For:
          </p>

          <p class="text-lg font-medium text-gray-900">
          <% if payment.club_id? %>
          <%= Club.find(payment.club_id).name %>
          <% end %>
            <% if payment.individual_member_id? %>
            <%= IndividualMember.where(id: payment.individual_member_id).full_name %>
            <% end %>
          </p>
      </div>

      <div class="my-2 mx-6">
      <p class="text-sm text-gray-500 ">
          Payment Year:
      </p>
      <p class="text-lg font-medium text-gray-900">
        <%= payment.payment_year %>
      </p>
   </div>
   </div>
   <div class="flex flex-wrap gap-2 ">
    
      <div class="my-2 mx-6">
        <p class="text-sm text-gray-500 ">
            Recorded by:
        </p>
        <p class="text-lg font-medium text-gray-900 ">
          <%= User.where(id: payment.payment_recorded_by_id).first.full_name %>
        </p>
     </div>
      

     <div class="my-2 mx-6">
        <p class="text-sm text-gray-500 ">
            Payment Date:
        </p>
        <p class="text-lg font-medium text-gray-900 ">
          <%= payment.payment_received_date.to_formatted_s(:usa) unless (payment.payment_received_date.to_s.empty?)%>
        </p>
     </div>

     <div class="my-2 mx-6">
        <p class="text-sm text-gray-500 ">
          Transaction Ref:
        </p>
        <p class="text-lg font-medium text-gray-900">
          <%= payment.payment_transaction_reference%>
        </p>
      </div>

      </div>

      <div class="my-2 mx-6">
        <p class="text-sm text-gray-500 ">
          Payment Notes:
        </p>
        <p class="text-lg font-medium text-gray-900 ">
          <%= payment.payment_notes %>
        </p>
      </div>
   
    </div>
  </div>

<br>
