<% content_for(:page_title, "Educators")%>

<div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10 text-sm">
 

<div id="educators">
 
<table class="table-auto border border-slate-400 text-xs">
  <thead>
    <tr>
      <th class="p-2 border-b text-left bg-blue-900 text-white">Name</th>
      <th class="font-bold p-2 border-b text-left bg-blue-900 text-white">School/District</th>
      <th class="font-bold p-2 border-b text-left bg-blue-900 text-white">City</th>
      <th class="font-bold p-2 border-b text-left bg-blue-900 text-white" >State</th>
      <th class="font-bold p-2 border-b text-left bg-blue-900 text-white" >Allocated_to</th>
    </tr>
  </thead>
  
  <tbody>
   <% @educators.each do |educator| %>
     <tr class="odd:bg-gray-100">
      <td class="p-2 border-b text-left"><%= link_to educator.last_name, educator_path(educator), class: link_class %>, <%= educator.first_name %></td>
      <td class="p-2 border-b text-left"><%= educator.school_name %></td>
      <td class="p-2 border-b text-left"><%= educator.city %></td>
      <td class="p-2 border-b text-left"><%= educator.state %></td>
      <td class="p-2 border-b text-left"><%= educator.user.full_name unless (educator.user_id.to_s.empty?)  %></td>
    </tr>
    <% end %>
    </tbody>
    </table>
    
    </div>
  </div>
    
    <br><br>
     <div class="mt-1">
    <%= link_to "Add New Educator", new_educator_path, class: block_link_class %>
    </div>
  
