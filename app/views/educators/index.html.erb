<% content_for(:page_title, "Educators")%>

<div class="mt-8 sm:mx-auto sm:w-full max-w-screen-xl">
  <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">

<div id="educators">
 
<table class="table-auto border border-slate-400 text-sm">
  <thead>
    <tr>
      <th class="font-bold p-2 border-b text-left bg-indigo-700 text-white">Name</th>
      <th class="font-bold p-2 border-b text-left bg-indigo-700 text-white">School/District</th>
      <th class="font-bold p-2 border-b text-left bg-indigo-700 text-white">City</th>
      <th class="font-bold p-2 border-b text-left bg-indigo-700 text-white" >State</th>
    </tr>
  </thead>
  
  <tbody>
   <% @educators.each do |educator| %>
     <tr class="odd:bg-gray-100">
      <td class="p-2 border-b text-left"><%= link_to educator.last_name, educator_path(educator), class: link_class %>, <%= educator.first_name %></td>
      <td class="p-2 border-b text-left"><%= educator.school_name %></td>
      <td class="p-2 border-b text-left"><%= educator.city %></td>
      <td class="p-2 border-b text-left"><%= educator.state %></td>
    </tr>
    <% end %>
    </tbody>
    <table>
    </div>
    
    <br><br>

   <div>
     <%= link_to "Add New Educator", new_educator_path, class: block_link_class %>
    </div>

    </div></div></div>
  
