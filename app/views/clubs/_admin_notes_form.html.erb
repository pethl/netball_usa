<%= form_with model: club, url: update_admin_notes_club_path(club), method: :patch, data: { turbo_frame: "admin_notes" } do |form| %>
  <div class="my-2">
    <%= form.text_area :admin_notes, class: "form-control", rows: 3, placeholder: "Enter admin notes..." %>
  </div>
  <%= form.submit "Save", class: "btn btn-primary btn-sm" %>
  <%= link_to "Cancel", club_path(club), data: { turbo_frame: "admin_notes" }, class: "btn btn-secondary btn-sm" %>
<% end %>