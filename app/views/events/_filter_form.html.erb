<%= form_with(url: request.path, method: :get, local: true, class: "flex flex-wrap gap-3 items-center justify-end") do %>

  <!-- Type Filter -->
  <%= select_tag :event_type,
        options_for_select(event_type, params[:event_type]),
        include_blank: "All Types",
        class: "h-9 w-32 text-sm rounded-md border-gray-300 focus:border-blue-800 focus:ring-blue-800" %>

  <!-- City Filter -->
  <%= text_field_tag :city, params[:city],
        placeholder: "City",
        class: "h-9 w-32 text-sm rounded-md border-gray-300 focus:border-blue-800 focus:ring-blue-800" %>

  <!-- State Filter -->
  <%= select_tag :state,
        options_for_select(us_states, params[:state]),
        include_blank: "All States",
        class: "h-9 w-28 text-sm rounded-md border-gray-300 focus:border-blue-800 focus:ring-blue-800" %>

  <!-- Filter Button -->
  <%= submit_tag "Filter",
        class: "h-9 px-4 text-sm font-semibold bg-blue-600 text-white rounded-md focus:ring-blue-800 focus:ring-2 focus:outline-none" %>

  <!-- Clear Button -->
  <%= link_to "Clear",
        request.path,
        class: "h-9 px-4 flex items-center justify-center text-sm bg-gray-200 text-gray-700 rounded-md focus:ring-blue-800 focus:ring-2 focus:outline-none" %>

<% end %>

