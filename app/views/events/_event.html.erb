<div class="sm:mx-auto sm:w-full sm:max-w-4xl px-4">
  <div class="bg-white py-6 px-4 shadow sm:rounded-lg sm:px-10 border border-gray-100">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-x-6 gap-y-2">

      <div>
        <p class="text-sm text-gray-500">Type:</p>
        <p class="text-sm font-medium text-gray-900"><%= event.event_type %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Is Educational:</p>
        <p class="text-sm font-medium text-gray-900"><%= event.is_educational %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Name:</p>
        <p class="text-sm font-medium text-gray-900"><%= event.name %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Status:</p>
        <p class="text-sm font-medium text-gray-900"><%= event.status %></p>
      </div>

      

      <div>
        <p class="text-sm text-gray-500">Start Date:</p>
        <p class="text-sm font-medium text-gray-900"><%= event.date&.strftime("%m/%d/%Y") %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">End Date:</p>
        <p class="text-sm font-medium text-gray-900"><%= event.end_date&.strftime("%m/%d/%Y") %></p>
      </div>

       <div>
        <p class="text-sm text-gray-500">Assigned To:</p>
        <p class="text-sm font-medium text-gray-900"> <%= event.assigned_user&.full_name || "—" %></p>
      </div>

      <div>
      </div>


      <div>
        <p class="text-sm text-gray-500">Proposal Submission Due:</p>
        <p class="text-sm font-medium text-gray-900"><%= event.proposal_submission_due&.strftime("%m/%d/%Y") %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Booth Registration Due:</p>
        <p class="text-sm font-medium text-gray-900"><%= event.booth_registration_due&.strftime("%m/%d/%Y") %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Attend?</p>
        <p class="text-sm font-medium text-gray-900"><%= event.attend %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Website:</p>
        <p class="text-sm font-medium text-gray-900"><%= event.website %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">City:</p>
        <p class="text-sm font-medium text-gray-900"><%= event.city %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">State:</p>
        <p class="text-sm font-medium text-gray-900"><%= event.state %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Location:</p>
        <p class="text-sm font-medium text-gray-900"><%= event.location %></p>
      </div>

      <div>
        <p class="text-sm text-gray-500">Booth #:</p>
        <p class="text-sm font-medium text-gray-900"><%= event.booth %></p>
      </div>

      <div class="md:col-span-2">
        <p class="text-sm text-gray-500">Key Contact:</p>
        <p class="text-sm font-medium text-gray-900 whitespace-pre-line"><%= event.key_contact %></p>
      </div>

      <div class="md:col-span-2">
        <p class="text-sm text-gray-500">Details:</p>
        <p class="text-sm font-medium text-gray-900 whitespace-pre-line"><%= event.details %></p>
      </div>

      <div class="md:col-span-2">
        <p class="text-sm text-gray-500">Costs:</p>
        <p class="text-sm font-medium text-gray-900 whitespace-pre-line"><%= event.cost_notes %></p>
      </div>

      <div class="md:col-span-2">
        <p class="text-sm text-gray-500">Outcome:</p>
        <p class="text-sm font-medium text-gray-900 whitespace-pre-line"><%= event.outcome %></p>
      </div>

      <div class="md:col-span-2">
        <p class="text-sm text-gray-500">Personnel:</p>
        <p class="text-sm font-medium text-gray-900 whitespace-pre-line">
          <% if event.people.any? %>
            <% event.people.each do |person| %>
              <%= person.role_full_name_city_state %><br>
            <% end %>
          <% else %>
            None assigned
          <% end %>
        </p>
      </div>

      <% if is_admin? && event.budget.present? %>
        <div class="md:col-span-2">
          <p class="text-sm text-gray-500">Budget Total:</p>
          <p class="text-sm font-medium text-gray-900">
            <%= number_to_currency(event.budget.budget_total, precision: 2) %><br>
            <%= link_to "View Budget Details ➔", event.budget, class: "text-blue-600 hover:underline" %> |
            <%= link_to "Edit Budget ➔", edit_budget_path(event.budget), class: "text-blue-600 hover:underline" %>
          </p>
        </div>
      <% end %>

    </div>
  </div>
</div>

