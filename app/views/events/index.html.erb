<% content_for(:page_title, "Events")%>

<div class="bg-white py-4 px-2 shadow sm:rounded-lg sm:px-10 text-sm">
 
<div id="events">
<div class="relative overflow-x-auto">
    <table class="w-full text-left rtl:text-right">
        <thead class="bg-white border-b text-gray-300 font-light text-xs ">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Type 
                </th>
                <th scope="col" class="px-6 py-3">
                    Name
                </th>
                <th scope="col" class="px-6 py-3">
                    Date
                </th>
                <th scope="col" class="px-6 py-3">
                    Status
                </th>
                <th scope="col" class="px-6 py-3">
                    City/State
                </th>
                <th scope="col" class="px-6 py-3">
                    Personnel
                </th>
                <th scope="col" class="px-6 py-3">
                    Budget Total
                </th>
               
            </tr>
        </thead>
        <tbody>
      <% @events.each do |event| %>
            <tr class="bg-white border-b hover:bg-gray-100">
                <th scope="row" class="px-6 py-4 font-medium text-gray-800 whitespace-nowrap dark:text-white">
                    <%= event.event_type %>
                </td>
                <td class="px-6 py-4">
                    <%= link_to event.name, edit_event_path(event), class: link_class %>
                </td>
                <td class="px-6 py-4">
                   <%= event.date.to_formatted_s(:usa) unless ( event.date.to_s.empty?) %>
                </td>
                 <td class="px-6 py-4">
                    <%= event.status %>
                </td>
                <td class="px-6 py-4">
                    <%= event.city %>,   <%= event.state %>
                </td>
                <td class="px-6 py-4">
                <% if event.people.any? %>
                   <% event.people.each do |person| %>
                     <%= person.full_name %> <br>
                    <% end %>
                <% end %>
                </td>
                <td class="px-6 py-4 text-right">
                   <%= number_to_currency(event.budget.budget_total, precision: 2) unless event.budget.to_s.empty? %>
                </td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
 </div>
</div>
<br>
<div class="m-2">
    <%= link_to "New event", new_event_path, class: small_button_class %>
     <br>
   </div>


 
   

