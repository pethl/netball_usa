          <%= form.label :pickup_note, "Arrivals Pick-up Notes", class: label_class%>
            <div class="mt-1">
              <%= form.text_area :pickup_note, class: input_class  %>
            </div> 
        </div>
      </div>
        
      <!-- ===============================
