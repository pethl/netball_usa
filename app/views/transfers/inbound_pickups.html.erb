<% content_for(:page_title, "US Open - Arrivals Transfers") %>

<%= render partial: "transfers/transfer_nav_tabs" %>

<% @transfers_by_date.each do |date, transfers| %>
 <div class="text-xl text-blue-800 mt-8 border-b pb-2">
  <%= date.strftime("%A, %B %e") %>
</div>

  <% transfers_by_group = transfers.group_by { |t| t.pick_up_grouping.presence || "Ungrouped" } %>

  <% transfers_by_group.each do |group, grouped_transfers| %>
    <div class="ml-4 mt-4 text-lg text-gray-700 font-semibold">
      Group: <%= group %> (<%= grouped_transfers.size %>)
      <% if (gt = grouped_transfers.map(&:arrival_time).compact.min).present? %>
        — <%= gt.strftime("%H:%M") %> (<%= gt.strftime("%I:%M %p") %>)
      <% end %>
    </div>

    <%# 1) group by flight %>
    <% by_flight = grouped_transfers.group_by(&:arrival_flight) %>

    <%# 2) order flights by earliest arrival_time in that flight (nil times go last) %>
    <% ordered_flights = by_flight.sort_by do |flight, trs|
         [
           trs.map(&:arrival_time).compact.min || Time.zone.parse("9999-12-31"),
           flight.to_s
         ]
       end %>

    <% ordered_flights.each do |flight, flight_transfers| %>
      <%# 3) optional: order people within a flight by time, then name %>
      <% flight_transfers_sorted =
           flight_transfers.sort_by { |t| [t.arrival_time || Time.zone.parse("9999-12-31"), t.person_full_name.to_s] } %>

      <div class="text-sm text-gray-600 ml-6 mt-2">
        ✈️ Flight: <%= flight.presence || "—" %> — <%= flight_transfers.size %> passengers
        @ <%= flight_transfers.map(&:arrival_time).compact.min&.strftime("%H:%M") %>
      </div>

      <div class="relative overflow-x-auto mt-1 ml-8 mb-12">
        <!-- your table head stays the same, just render flight_transfers_sorted -->
        <table class="table-fixed w-full text-sm border-collapse border border-gray-200">
          <thead class="bg-gray-100 text-xs text-gray-700 font-semibold">
            <tr>
              <th class="border px-2 py-1 text-left">Name</th>
              <th class="border px-2 py-1 text-left">Phone</th>
              <th class="border px-2 py-1 text-left">Arr. Time</th>
              <th class="border px-2 py-1 text-left">Airline</th>
              <th class="border px-2 py-1 text-left">Terminal</th>
              <th class="border px-2 py-1 text-left">Pick Up</th>
              <th class="border px-2 py-1 text-left">Hotel</th>
              <th class="border px-2 py-1 text-left">Notes</th>
            </tr>
          </thead>
          <tbody>
            <% flight_transfers_sorted.each do |t| %>
              <tr class="bg-white border-t hover:bg-gray-50">
                <td class="px-2 py-1">
                  <% if t.person&.full_name.present? %>
                    <%= link_to t.person.full_name, edit_transfer_path(t), class: link_class %>
                  <% else %> — <% end %>
                </td>
                <td class="px-2 py-1"><%= t.arrival_phone.presence || "—" %></td>
                <td class="px-2 py-1">
                  <% if t.arrival_time.present? %>
                    <%= t.arrival_time.strftime("%H:%M") %><br>
                    <span class="text-xs text-gray-500"><%= t.arrival_time.strftime("%I:%M %p") %></span>
                  <% else %> — <% end %>
                </td>
                <td class="px-2 py-1"><%= t.arrival_airline.presence || "—" %></td>
                <td class="px-2 py-1"><%= t.arrival_terminal.presence || "—" %></td>
                <td class="px-2 py-1"><%= t.pickup_type.presence || "—" %></td>
                <td class="px-2 py-1"><%= t.hotel_name.presence || "—" %></td>
                <td class="px-2 py-1"><%= t.pickup_note.presence || "—" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% end %>
  <% end %>
<% end %>

