<ul class="flex flex-wrap text-xs font-medium text-left text-gray-500">
  <li class="me-2">
    <%= link_to "Event Attendees", transfers_path, class: "inline-block p-4 rounded-t-lg #{'text-blue-900 bg-gray-100' if current_page?(transfers_path)}" %>
  </li>
  <li class="me-2">
    <%= link_to "Arrivals Transfer", inbound_pickups_transfers_path, class: "inline-block p-4 rounded-t-lg #{'text-blue-900 bg-gray-100' if current_page?(inbound_pickups_transfers_path)}" %>
  </li>
  <li class="me-2">
    <%= link_to "Departures Transfers", outbound_pickups_transfers_path, class: "inline-block p-4 rounded-t-lg #{'text-blue-900 bg-gray-100' if current_page?(outbound_pickups_transfers_path)}" %>
  </li>
  <% if pdf_label && pdf_path %>
  <li class="me-2">
    <div class="inline-block p-4 text-gray-500 rounded-t-lg">
      <%= link_to(pdf_label, pdf_path, style: "color:blue") %>
    </div>
  </li>
<% end %>
</ul>
