<ul class="flex flex-wrap text-xs font-medium text-left text-gray-500">
  <li class="me-2">
    <%= link_to "Event Attendees", transfers_path, class: "inline-block py-4 px-2 rounded-t-lg #{'text-blue-900 bg-gray-100' if current_page?(transfers_path)}" %>
  </li>
  <li class="me-2">
    <%= link_to "Arrivals Transfer", inbound_pickups_transfers_path, class: "inline-block py-4 px-2 rounded-t-lg #{'text-blue-900 bg-gray-100' if current_page?(inbound_pickups_transfers_path)}" %>
  </li>
  <li class="me-2">
    <%= link_to "Departures Transfers", outbound_pickups_transfers_path, class: "inline-block py-4 px-2 rounded-t-lg #{'text-blue-900 bg-gray-100' if current_page?(outbound_pickups_transfers_path)}" %>
  </li>
  <li class="me-2">
    <%= link_to "🛬 Arrivals PDF", download_transfers_in_sheet_pdf_path(format: :pdf, value: Date.today.beginning_of_year),
        class: "inline-block py-4 px-2 rounded-t-lg text-blue-600 hover:underline" %>
  </li>
  <li class="me-2">
    <%= link_to "🛫 Departures PDF", download_transfers_out_sheet_pdf_path(format: :pdf, value: Date.today.beginning_of_year),
        class: "inline-block py-4 px-2 rounded-t-lg text-blue-600 hover:underline" %>
  </li>
  <li class="me-2">
    <%= link_to "👕 Uniform & T-Shirt PDF", download_uniforms_pdf_path(format: :pdf, value: Date.today.beginning_of_year),
        class: "inline-block py-4 px-2 rounded-t-lg text-blue-600 hover:underline" %>
  </li>
   <li class="me-2">
    <%= link_to "📋 Attendees PDF", transfers_attendee_list_pdf_path(format: :pdf, event_name: @event_name),
        class: "inline-block py-4 px-2 rounded-t-lg text-blue-600 hover:underline", target: "_blank" %>
  </li>

  <li class="me-2">
  <%= link_to "✈️ Flight Details PDF",
      download_flights_pdf_path(format: :pdf, value: Date.today.beginning_of_year),
      class: "inline-block py-4 px-2 rounded-t-lg text-blue-600 hover:underline" %>
</li>
</ul>


