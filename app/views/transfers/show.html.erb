<% content_for(:page_title, "Airport Transfer")%>
<% unless current_user.nil? %>  
  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md md:max-w-lg justify-center">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
    <% end %>
      <br>

      <%= render @transfer %>
    </div>
  </div>

  <br>

  <div>
    <%= link_to "Edit this transfer", edit_transfer_path(@transfer), class:link_class %> |
    <%= link_to "Back to transfers", transfers_path, class:link_class %>

   <% if user_signed_in? %> 
    <%= button_to "Destroy this transfer", @transfer, method: :delete %>
    <% end %>
  </div>
