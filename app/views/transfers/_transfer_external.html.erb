      <% if transfer.person.certification_url.to_s.empty? %>
        <p class="italic text-gray-500">Not uploaded</p>
      <% else %>
        <%= image_tag transfer.person.certification_url, class: "h-20 w-auto rounded shadow" %>
      <% end %>
