<div class="max-w-2xl mx-auto p-6 border-4 border-blue-900 bg-white rounded-2xl shadow-xl">
  <div class="space-y-6">
    <div class="p-4 bg-blue-100 border-l-8 border-blue-900 text-blue-900 rounded">
      <h2 class="text-xl font-bold">U.S. Open Netball Championships® Volunteer Information</h2>
    </div>

    

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">Name:</p>
      <p><%= transfer.person.full_name %></p>

      <p class="font-semibold mt-4">Role:</p>
      <p><%= transfer.role %></p>
    </div>

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">Hotel Arrival:</p>
      <p><%= transfer.hotel_arrival %></p>

      <p class="font-semibold mt-4">Hotel Departure:</p>
      <p><%= transfer.hotel_departure %></p>

      <p class="font-semibold mt-4">Room Type:</p>
      <p><%= transfer.room_type %></p>

      <p class="font-semibold mt-4">Room Share (Volunteer Name):</p>
      <p><%= transfer.share_volunteer %></p>
    </div>

     <div class="mb-6">
        <%= link_to "» Click HERE to book any additional nights needed for your personal stay (not covered by the above nights requested).".html_safe,
        "https://www.marriott.com/event-reservations/reservation-link.mi?id=1732664035228&key=GRP&guestreslink2=true&app=resvlink",
        target: "_blank",
        rel: "noopener",
        class: "block w-full px-4 py-4 bg-yellow-400 hover:bg-yellow-500 text-black font-semibold rounded shadow-lg transition duration-200 text-center text-lg" %>
    </div>

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">Arrivals Airport Transport Request:</p>
      <p><%= transfer.arrival_airport_transport_request.presence || "Not provided" %></p>

      <% unless transfer.arrival_airport_transport_request == "No - Have own transport" %>
      <p class="font-semibold mt-4">Arrivals Phone:</p>
      <p><%= transfer.arrival_phone %></p>
      <br>
      <p class="font-semibold">Arrival Info:</p>
      <p><%= transfer.arrival_airline %> <%= transfer.arrival_flight %><br>
         <%= transfer.arrival_time.to_formatted_s(:usa_day_dt) unless transfer.arrival_time.to_s.empty? %></p>
      <% end %>
    </div>

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">Departure Airport Transport Request:</p>
      <p><%= transfer.departure_airport_transport_request.presence || "Not provided" %></p>

      <% unless transfer.departure_airport_transport_request == "No - Have own transport" %>
      <p class="font-semibold mt-4">Departure Phone:</p>
      <p><%= transfer.departure_phone %></p>
      <br>
      <p class="font-semibold">Departure Info:</p>
      <p><%= transfer.departure_airline %> <%= transfer.departure_flight %><br>
         <%= transfer.departure_time.to_formatted_s(:usa_day_dt) unless transfer.departure_time.to_s.empty? %></p>
      <% end %>
    </div>


    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
     

      <p class="font-semibold mt-4">Umpire Badge Level:</p>
      <p><%= transfer.person.level_submitted %></p>

      <p class="font-semibold mt-4">Certification Date:</p>
      <p><%= transfer.person.certification_date.to_formatted_s(:usa) unless transfer.person.certification_date.to_s.empty? %></p>

      <p class="font-semibold mt-4">Certification Proof:</p>
      <% if transfer.person.certification_url.to_s.empty? %>
        <p class="italic text-gray-500">Not uploaded</p>
      <% else %>
        <%= image_tag transfer.person.certification_url, class: "h-20 w-auto rounded shadow" %>
      <% end %>
    </div>

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">T-Shirt Size:</p>
      <p><%= transfer.person.tshirt_size %></p>

      <p class="font-semibold mt-4">Uniform Size (Umpires Only):</p>
      <p><%= transfer.person.uniform_size %></p>

      <p class="font-semibold mt-4">Headshot:</p>
      <% if transfer.person.headshot_url.to_s.empty? %>
        <p class="italic text-gray-500">Not uploaded</p>
      <% else %>
        <%= image_tag transfer.person.headshot_url, class: "h-20 w-auto rounded shadow" %>
      <% end %>
    </div>

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">Notes:</p>
      <p><%= transfer.notes %></p>
    </div>

<% if user_signed_in? && current_user.role == "na_people" %>
    <div class="mt-6 text-center">
       <%= link_to "Edit Page",   edit_transfer_path(transfer), class: "text-blue-900 font-semibold hover:underline" %>
    <br>
    <%= link_to "« Back to Home Page", root_path, class: "text-blue-900 font-semibold hover:underline" %>
  </div>
<% end %>
  </div>
</div>
