<div class="max-w-2xl mx-auto p-6 border-4 border-blue-900 bg-white rounded-2xl shadow-xl">
  <div class="space-y-6">
    <div class="p-4 bg-blue-100 border-l-8 border-blue-900 text-blue-900 rounded">
      <h2 class="text-xl font-bold">ðŸ“‹ US Open Volunteer Information</h2>
    </div>

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">Consent Given:</p>
      <p><%= transfer.consent? ? 'âœ… Given' : 'âŒ Not Given' %></p>
    </div>

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">Name:</p>
      <p><%= transfer.person.full_name %></p>

      <p class="font-semibold mt-4">Role:</p>
      <p><%= transfer.role %></p>
    </div>

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">Hotel Arrival:</p>
      <p><%= transfer.hotel_arrival %></p>

      <p class="font-semibold mt-4">Hotel Departure:</p>
      <p><%= transfer.hotel_departure %></p>

      <p class="font-semibold mt-4">Room Type:</p>
      <p><%= transfer.room_type %></p>

      <p class="font-semibold mt-4">Room Share (Volunteer Name):</p>
      <p><%= transfer.share_volunteer %></p>
    </div>

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">Airport Transport Request:</p>
      <p><%= transfer.airport_transport_request.presence || "Not provided" %></p>

      <p class="font-semibold mt-4">Airport Pick-up Required:</p>
      <p><%= transfer.no_pick_up? ? 'Yes' : 'No' %></p>

      <p class="font-semibold mt-4">Phone:</p>
      <p><%= transfer.phone %></p>
    </div>

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">Arrival Info:</p>
      <p><%= transfer.arrival_airline %> <%= transfer.arrival_flight %><br>
         <%= transfer.arrival_time.to_formatted_s(:usa_dt) unless transfer.arrival_time.to_s.empty? %></p>

      <p class="font-semibold mt-4">Departure Info:</p>
      <p><%= transfer.departure_airline %> <%= transfer.departure_flight %><br>
         <%= transfer.departure_time.to_formatted_s(:usa_dt) unless transfer.departure_time.to_s.empty? %></p>
    </div>

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">Visa Type:</p>
      <p><%= transfer.visa_type %></p>

      <p class="font-semibold mt-4">Umpire Badge Level:</p>
      <p><%= transfer.person.level_submitted %></p>

      <p class="font-semibold mt-4">Certification Date:</p>
      <p><%= transfer.person.certification_date.to_formatted_s(:usa) unless transfer.person.certification_date.to_s.empty? %></p>

      <p class="font-semibold mt-4">Certification Proof:</p>
      <% if transfer.person.certification_url.to_s.empty? %>
        <p class="italic text-gray-500">Not uploaded</p>
      <% else %>
        <%= image_tag transfer.person.certification_url, class: "h-20 w-auto rounded shadow" %>
      <% end %>
    </div>

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">T-Shirt Size:</p>
      <p><%= transfer.person.tshirt_size %></p>

      <p class="font-semibold mt-4">Uniform Size (Umpires Only):</p>
      <p><%= transfer.person.uniform_size %></p>

      <p class="font-semibold mt-4">Headshot:</p>
      <% if transfer.person.headshot_url.to_s.empty? %>
        <p class="italic text-gray-500">Not uploaded</p>
      <% else %>
        <%= image_tag transfer.person.headshot_url, class: "h-20 w-auto rounded shadow" %>
      <% end %>
    </div>

    <div class="p-4 bg-gray-100 border border-gray-200 rounded">
      <p class="font-semibold">Notes:</p>
      <p><%= transfer.notes %></p>
    </div>

<% if user_signed_in? && current_user.role == "na_people" %>
    <div class="mt-6 text-center">
    <%= link_to "Â« Back to Home Page", root_path, class: "text-blue-900 font-semibold hover:underline" %>
  </div>
<% end %>
  </div>
</div>
