
<%= turbo_frame_tag team do %>
  <div class="team"> 
  
  
  <div class="flex w-1/3 justify-between items-center border border-blue-900 rounded-lg shadow-lg shadow-blue-900 hover:border-black mx-8 p-4">
       <div>
          <span class="text-lg">  <%= link_to team.name, 
          team_path(team),
          data: { turbo_frame: "_top" } %></span><br>
          <span class="font-light text-sm"> - city, state</span>
       </div>
  
   
      <div class="team__actions">
      
       <%= button_to "Delete",
                    team_path(team),
                    method: :delete,
                    class: "font-semibold text-red-500" %>
      <%= link_to "Edit",
                  edit_team_path(team),
                  class: "font-semibold text-green-500"  %>
    </div>
    </div>
    <br>
  </div>
  <% end %>